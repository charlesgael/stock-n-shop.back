{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "typeRoots": ["node_modules/@types", "@types"]
    },
    "exclude": ["node_modules", "src/__test__", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
